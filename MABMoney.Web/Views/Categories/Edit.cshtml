@model MABMoney.Web.Models.Categories.EditViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Master.cshtml";
}

<h2>Edit Category</h2>

@using (Html.BeginForm())
{
    <p>@Html.LabelFor(x => x.Name)
    @Html.TextBoxFor(x => x.Name)
    @Html.ValidationMessageFor(x => x.Name)</p>
    
    <p>@Html.LabelFor(x => x.Account_AccountID)
    @Html.DropDownListFor(x => x.Account_AccountID, Model.Accounts, "Please select...")
    @Html.ValidationMessageFor(x => x.Account_AccountID)</p>

    <p>@Html.LabelFor(x => x.Type)
    @Html.DropDownListFor(x => x.Type, Model.CategoryTypes, "Please select...")
    @Html.ValidationMessageFor(x => x.Type)</p>
    
    <p>@Html.HiddenFor(x => x.CategoryID)
    <input type="submit" value="Save" class="btn btn-primary" /></p>
}

@using (Html.BeginForm("Delete", "Categories"))
{
    <p><input type="hidden" name="id" value="@Model.CategoryID" /><input type="submit" value="Delete" class="btn" /></p>
}