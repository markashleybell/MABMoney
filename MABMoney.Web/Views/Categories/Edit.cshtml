@model MABMoney.Web.Models.Categories.EditViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Master.cshtml";
}

<h2>Edit Category</h2>

@using (Html.BeginForm())
{
    @Html.EditorForModel()

    <p><input type="submit" value="Save" /></p>
}

@using (Html.BeginForm("Delete", "Categories"))
{
    <p><input type="hidden" name="id" value="@Model.CategoryID" /><input type="submit" value="Delete" /></p>
}