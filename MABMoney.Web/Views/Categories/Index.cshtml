@model MABMoney.Web.Models.Categories.IndexViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h1>Categories</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <caption>User List</caption>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Account</th>
                    <th>Category Type</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.Categories)
                {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.AccountName</td>
                    <td>@category.Type</td>
                    <td>@Html.ActionLink("Edit", "Edit", new { id = category.CategoryID })</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-2">@Html.ActionLink("Add New Category", "Create", null, new { @class = "btn btn-primary btn-block" })</div>
    <div class="col-md-10"></div>
</div>