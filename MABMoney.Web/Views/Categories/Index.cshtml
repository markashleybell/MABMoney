@model MABMoney.Web.Models.Categories.IndexViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}

<h2>Categories</h2>

<table class="table table-striped">
    <caption>User List</caption>
    <thead>
        <tr>
            <th>Name</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
        <tr>
            <td>@category.Name</td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = category.CategoryID })</td>
        </tr>
        }
    </tbody>
</table>

<p>@Html.ActionLink("Add New Category", "Create")</p>
