@model MABMoney.Web.Models.Categories.IndexViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}

<h2>Categories</h2>

<table class="table table-striped">
    <caption>User List</caption>
    <thead>
        <tr>
            <th>Name</th>
            <th>Account</th>
            <th>Category Type</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
        <tr>
            <td>@category.Name</td>
            <td>@category.Account.Name</td>
            <td>@category.Type</td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = category.CategoryID })</td>
        </tr>
        }
    </tbody>
</table>

<div class="row button-row">
    <div class="span2">
        @Html.ActionLink("Add New Category", "Create", null, new { @class = "btn btn-primary" })
    </div>
    <div class="span8">&nbsp;</div>
    <div class="span2">&nbsp;</div>
</div>
