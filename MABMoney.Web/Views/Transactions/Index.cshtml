@model MABMoney.Web.Models.Transactions.IndexViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h1>Transactions</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <caption>Transaction List</caption>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Account</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var transaction in Model.Transactions)
                {
                <tr>
                    <td>@transaction.Date.ToString("dd/MM/yyyy")</td>
                    <td>@transaction.Account.Name</td>
                    <td>@transaction.Category.Name</td>
                    <td>@transaction.Description</td>
                    <td>@transaction.Amount.ToString("#0.00")</td>
                    <td>@Html.ActionLink("Edit", "Edit", new { id = transaction.TransactionID })</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-2">@Html.ActionLink("Add New Transaction", "Create", null, new { @class = "btn btn-primary" })</div>
    <div class="col-md-8"></div>
    <div class="col-md-2">@Html.ActionLink("Import Transactions", "Import", null, new { @class = "btn btn-primary pull-right" })</div>
</div>
