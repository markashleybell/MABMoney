@model MABMoney.Web.Models.Budgets.IndexViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h1>Budgets</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <caption>Budget List</caption>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var budget in Model.Budgets)
                {
                <tr>
                    <td>@Html.ActionLink(budget.Start.ToString("dd/MM/yyyy") + " - " + budget.End.ToString("dd/MM/yyyy"), "Details", new { id = budget.BudgetID })</td>
                    <td>@Html.ActionLink("Edit", "Edit", new { id = budget.BudgetID })</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-2">@Html.ActionLink("Add New Budget", "Create", null, new { @class = "btn btn-primary btn-block" })</div>
    <div class="col-md-10"></div>
</div>