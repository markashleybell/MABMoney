@model MABMoney.Web.Models.Budgets.IndexViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}

<h2>Budgets</h2>

<table class="table table-striped">
    <caption>Budget List</caption>
    <thead>
        <tr>
            <th>Name</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var budget in Model.Budgets)
        {
        <tr>
            <td>@Html.ActionLink(budget.Start.ToString("dd/MM/yyyy") + "-" + budget.End.ToString("dd/MM/yyyy"), "Details", new { id = budget.BudgetID })</td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = budget.BudgetID })</td>
        </tr>
        }
    </tbody>
</table>

<p>@Html.ActionLink("Add New Budget", "Create")</p>
