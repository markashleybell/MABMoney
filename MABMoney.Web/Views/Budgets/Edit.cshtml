@model MABMoney.Web.Models.Budgets.EditViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Master.cshtml";
}

<h2>Edit Budget</h2>

@using (Html.BeginForm("Edit", "Budgets", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.EditorControlGroupFor(x => x.Start)
    
    @Html.EditorControlGroupFor(x => x.End)

    @Html.SelectControlGroupFor(x => x.Account_AccountID, Model.Accounts, "Please select...")
    
    @Html.EditorFor(x => x.Categories)

    @Html.HiddenFor(x => x.BudgetID)

    @Html.SubmitControlGroup("Save")
}

@using (Html.BeginForm("Delete", "Budgets", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <input type="hidden" name="id" value="@Model.BudgetID" />
    
    @Html.ButtonControlGroup("Delete")
}