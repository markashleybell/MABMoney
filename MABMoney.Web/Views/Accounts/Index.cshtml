@model MABMoney.Web.Models.Accounts.IndexViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h1>Accounts</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <caption>Account List</caption>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Current Balance</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in Model.Accounts)
                {
                <tr>
                    <td>@account.Name @((account.Default) ? "(Default)" : "")</td>
                    <td>@account.Type.GetDescription()</td>
                    <td>@account.CurrentBalance</td>
                    <td>@Html.ActionLink("Edit", "Edit", new { id = account.AccountID })</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-2">@Html.ActionLink("Add New Account", "Create", null, new { @class = "btn btn-primary btn-block" })</div>
    <div class="col-md-10"></div>
</div>
