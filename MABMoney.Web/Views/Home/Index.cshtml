@model MABMoney.Web.Models.Home.IndexViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}

<h2>Account Overview</h2>

<h3>@Model.Account.Name</h3>
<p>Starting Balance: @Model.Account.StartingBalance.ToString("#0.00")</p>
<p>Current Balance: @Model.Account.CurrentBalance.ToString("#0.00")</p>

<ul class="nav nav-tabs">
  <li class="active"><a href="#income" data-toggle="tab">Income</a></li>
  <li><a href="#expenses" data-toggle="tab">Expenses</a></li>
</ul>
<div class="tab-content">
    <div class="tab-pane active" id="income">
        <table class="table table-striped">
            <caption>Transaction List</caption>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var transaction in Model.Transactions.Where(t => t.Amount > 0))
                {
                <tr>
                    <td>@transaction.Date.ToString("dd/MM/yyyy")</td>
                    <td>@transaction.Description</td>
                    <td>@transaction.Amount.ToString("#0.00")</td>
                    <td>@Html.ActionLink("Edit", "Edit", new { id = transaction.TransactionID })</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="tab-pane" id="expenses">
        <table class="table table-striped">
            <caption>Transaction List</caption>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var transaction in Model.Transactions.Where(t => t.Amount < 0))
                {
                <tr>
                    <td>@transaction.Date.ToString("dd/MM/yyyy")</td>
                    <td>@transaction.Description</td>
                    <td>@transaction.Amount.ToString("#0.00")</td>
                    <td>@Html.ActionLink("Edit", "Edit", new { id = transaction.TransactionID })</td>
                </tr>
                }
            </tbody>
        </table>
    </div>    
 </div>

