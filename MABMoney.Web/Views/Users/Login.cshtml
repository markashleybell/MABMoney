@model MABMoney.Web.Models.Users.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Master.cshtml";
}

<h1>Login</h1>

@using (Html.BeginForm("Login", "Users", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.TextControlGroupFor(x => x.Email)

    @Html.PasswordControlGroupFor(x => x.Password)

    <div class="form-group">
        <div class="col-lg-10 col-md-offset-2">
            <div class="form-control-static">@Html.ActionLink("I've forgotten my password", "PasswordResetRequest")</div>
        </div>
    </div>

    @Html.CheckboxControlGroupFor(x => x.RememberMe)
    
    @Html.HiddenFor(x => x.RedirectAfterSubmitUrl)
    
    @Html.SubmitControlGroup("Log In")
}

<div class="row">
    <div class="col-lg-10 col-md-offset-2">@Html.ActionLink("Don't have an account? Click here to create one.", "Signup", "Users", null, new { @class = "btn btn-default" })</div>
</div>